                                <Rectangle.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Rectangle.RenderTransform>
                                <Rectangle.Stroke>
                                    <ImageBrush ImageSource="zakr.png"/>
                                </Rectangle.Stroke>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="otkr.png"/>
                                </Rectangle.Fill>
                            </Rectangle>
